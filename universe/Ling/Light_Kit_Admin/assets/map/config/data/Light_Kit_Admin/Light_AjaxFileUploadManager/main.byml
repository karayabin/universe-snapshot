items:
    lka_user_profile:
        action:
            -
                use_Light_UserData: true
                path: images/avatar.{extension}
                imageTransformer: resize(200)
                isPrivate: false
                use_2svp: true
        validation:
            maxFileSize: 2M
            extensions:
                - png
                - jpeg
                - jpg
                - gif
