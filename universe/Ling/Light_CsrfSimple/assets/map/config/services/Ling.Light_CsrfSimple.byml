csrf_simple:
    instance: Ling\Light_CsrfSimple\Service\LightCsrfSimpleService
    methods:
        setContainer:
            container: @container()

# --------------------------------------
# hooks
# --------------------------------------
$events.methods_collection:
    -
        method: registerListener
        args:
            event: Ling.Light.on_route_found
            listener:
                instance: @service(csrf_simple)
                callable_method: onRouteFound

